fastlane_version "2.129.0"

default_platform :ios

platform :ios do


  # Dependencies ***********************

  desc "Resolve External Dependencies (the shell script makes Bitrise work)"
  lane :resolve_dependencies do
    sh("cd .. && xcodebuild -showBuildSettings -project KeyboardKit.xcodeproj -scheme KeyboardKit")
    spm(command: "resolve")
  end
  
  
  # Lint =======================
  
  desc "Run linting"
  lane :lint do
    swiftlint(strict: true)
  end


  # Test =======================
  
  desc "Run unit tests"
  lane :test do
    # Note: Since UIKit tests must be run from a project and
    # this project has no such project, we instead prompt to
    # ask the developers to confirm that tests have been run.
    # resolve_dependencies
    # run_tests(scheme: "KeyboardKit")
    confirm = prompt(text: "Have you successfully run all unit tests? [y/n]: ")
    if confirm != "y"
        UI.user_error!("You must run all unit tests before releasing a new version!")
    end
  end


  # Version ================

  desc "Create a new version"
  lane :version do |options|
    ensure_git_status_clean
    ensure_git_branch(branch: 'master')
    lint
    test

    bump_type = options[:type]
    if bump_type == nil or bump_type.empty?
      bump_type = "patch"
    end
    
    version = version_bump_podspec(path: "KeyboardKit.podspec", bump_type: bump_type)
    increment_version_number(version_number: version)
  
    git_commit(path: "*", message: "Bump to #{version}")
  
    add_git_tag(tag: version)
    push_git_tags()
    push_to_git_remote()
    pod_push()
  end
  
end
